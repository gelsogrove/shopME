    "@types/joi": "17.2.2",
    "@types/jsonwebtoken": "9.0.9",
    "@types/multer": "^1.4.12",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/yamljs": "0.2.34",
    "axios": "^1.8.4",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "cuid": "^3.0.0",
    "dotenv": "16.4.7",
    "express-rate-limit": "^7.5.0",
    "helmet": "8.1.0",
    "joi": "17.13.3",
    "jsonwebtoken": "9.0.2",
