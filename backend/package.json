{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend for Italian products shop",
  "main": "src/index.ts",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "dev": "dotenv -e .env.development -- tsnd --respawn src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "dotenv -e .env.test -- jest --verbose --detectOpenHandles --passWithNoTests",
    "seed": "ts-node prisma/seed.ts",
    "start:prod": "node dist/index.js",
    "start:dev": "ts-node-dev --respawn --transpile-only --notify false --clear --exit-child -r dotenv/config src/index.ts",
    "test:mocha": "mocha",
    "test:unit": "dotenv -e .env.test -- jest --config jest.config.unit.js --verbose --detectOpenHandles --passWithNoTests",
    "test:integration": "INTEGRATION_TEST=true dotenv -e .env.test -- jest --verbose --detectOpenHandles --passWithNoTests \"src/__tests__/integration/\"",
    "test:coverage": "dotenv -e .env.test -- jest --verbose --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepare": "cd .. && husky install backend/.husky"
  },
  "keywords": [
    "ecommerce",
    "italian",
    "products",
    "shop"
  ],
  "author": "Andrea Gelso",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.9.1",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.16",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.10",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "js-yaml": "^4.1.0",
    "lint-staged": "^15.2.0",
    "mocha": "^10.2.0",
    "prettier": "^3.2.5",
    "prisma": "^5.9.1",
    "supertest": "^6.3.4",
    "swagger-jsdoc": "^6.2.8",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
