{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend for Italian products shop",
  "main": "src/index.ts",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "start": "ts-node-dev --respawn --transpile-only --notify false --clear --exit-child -r dotenv/config src/index.ts",
    "start:prod": "node dist/index.js",
    "start:dev": "ts-node-dev --respawn --transpile-only --notify false --clear --exit-child -r dotenv/config src/index.ts",
    "build": "npx tsc --skipLibCheck --noEmitOnError false || exit 0",
    "test": "jest",
    "test:mocha": "mocha",
    "test:unit": "mocha test/unit/**/*.spec.ts",
    "test:watch": "mocha --watch",
    "test:coverage": "nyc mocha",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "clean": "rm -rf dist",
    "start:mcp": "cd frontend && npm run dev",
    "db:seed": "npx prisma db seed",
    "db:studio": "npx prisma studio",
    "db:generate": "npx prisma generate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
