{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend for Italian products shop",
  "main": "src/index.ts",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "dev": "dotenv -c .env.development -- tsnd --respawn src/index.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/src/index.js",
    "seed": "ts-node prisma/seed.ts",
    "start:prod": "node dist/src/index.js",
    "start:dev": "ts-node-dev --respawn --transpile-only --notify false --clear --exit-child -r dotenv/config src/index.ts",
    "test:unit": "cross-env NODE_ENV=test jest --config jest.config.unit.js",
    "test:integration": "cross-env NODE_ENV=test INTEGRATION_TEST=true jest --config jest.config.integration.js --verbose --forceExit",
    "test:integration:report": "cross-env NODE_ENV=test INTEGRATION_TEST=true jest --config jest.config.integration.js --verbose --forceExit --detectOpenHandles --silent=false",
    "test:integration:failed": "cross-env NODE_ENV=test INTEGRATION_TEST=true jest --config jest.config.integration.js --verbose --forceExit --detectOpenHandles --silent=false --passWithNoTests --testNamePattern='(FAILED|failed)'",
    "test:integration:coverage": "cross-env NODE_ENV=test INTEGRATION_TEST=true jest --config jest.config.integration.js --verbose --forceExit --detectOpenHandles --coverage --coverageReporters='text-summary' --coverageReporters='html' --coverageReporters='json'",
    "test:coverage": "cross-env NODE_ENV=test jest --verbose --coverage --coverageReporters='text-summary' --coverageReporters='html' --config jest.config.unit.js",
    "test:report": "npm run test:integration:report && node scripts/generate-test-report.js",
    "lint": "echo 'Linting skipped for development'",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepare": "cd .. && husky install backend/.husky"
  },
  "keywords": [
    "ecommerce",
    "italian",
    "products",
    "shop"
  ],
  "author": "Andrea Gelso",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@xenova/transformers": "^2.17.2",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.5",
    "openai": "^4.98.0",
    "pdf.js-extract": "^0.2.1",
    "pdfkit": "^0.17.1",
    "qrcode": "^1.5.4",
    "sharp": "^0.34.2",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/joi": "^17.2.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.11.16",
    "@types/nodemailer": "^6.4.17",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "axios": "^1.11.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.10",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "jest-mock-extended": "^3.0.5",
    "lint-staged": "^15.2.0",
    "prettier": "^3.6.2",
    "prisma": "^6.5.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
